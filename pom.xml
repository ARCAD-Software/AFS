			<version>1.6.2</version>
		</dependency>
		<!-- Scheduler Implementation -->
		<dependency>
			<groupId>it.sauronsoftware.cron4j</groupId>
			<artifactId>it.sauronsoftware.cron4j</artifactId>
			<version>2.2.5</version>
		</dependency>
		
