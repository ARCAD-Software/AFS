								<plugin id="com.oracle.database.jdbc" />
								<plugin id="com.sun.jna" />
								<plugin id="com.sun.jna.platform" />
								<plugin id="com.sun.mail.javax.mail" />
								<plugin id="derbyclient" />
								<plugin id="it.sauronsoftware.cron4j" />
								<plugin id="groovy" />
								<plugin id="javax.enterprise.cdi-api" />
								<plugin id="javax.interceptor-api" />
								<plugin id="javax.resource-api" />
								<plugin id="javax.servlet" />
								<plugin id="javax.transaction-api" />
								<plugin id="javax.xml" />
								<plugin id="jcifs" />
